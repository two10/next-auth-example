{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "../javascript-version/src",
    "target": "esnext",
    "lib": [
      "ES2020"
    ],
    "pretty": true,
    "allowJs": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve"
  },
  "include":  ["src","process.d.ts","next.d.ts","next-env.d.ts", "next-auth.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules"
  ]
}
